@model IEnumerable<CHBHDT63131330.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tin tức</h2>

<p>
    @Html.ActionLink("Tạo tin tức", "Create")
</p>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TieuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoiDung)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TieuDe)
        </td>
        <td>
            <button class="btn btn-success">
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTT }, new { @style = "color:white;" })
            </button>
            <button class="btn btn-primary">
                @Html.ActionLink("Xem", "Details", new { id = item.MaTT }, new { @style = "color:white;" })
            </button>
            <button class="btn btn-danger">
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTT }, new { @style = "color:white;" })
            </button>
        </td>
    </tr>
}

</table>
