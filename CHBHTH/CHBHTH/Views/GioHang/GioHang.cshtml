@using CHBHDT63131330.Models;
@model List<GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml";
}
<center>
    <h2 class=""> Giỏ hàng <i class="fa fa-shopping-cart"></i></h2>
    <br />
    <table class="table-hover table-bordered divGioHang">
        <tr style="">
            <th> Mã SP</th>

            <th> Tên SP</th>

            <th> Ảnh bìa</th>

            <th> Đơn giá</th>

            <th> Số lượng</th>

            <th> Thành tiền</th>
        </tr>



        @foreach (var item in Model)
        {
            <tr class="font-italic">
                <td> @item.iMasp</td>

                <td> @item.sTensp</td>

                <td> <img src="@Url.Content("~/Images/iphone.jpg")" width="100" height="100" /></td>

                <td>  @String.Format("{0:0,0}", item.dDonGia) VNĐ</td>

                <td> @item.iSoLuong</td>

                <td> @String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
            </tr>
        }

        <tr>
            <td colspan="6" style="text-align:right">

                @Html.ActionLink("Chỉnh sửa giỏ hàng", "SuaGioHang") <br />
                @using (Html.BeginForm("ThanhToanDonHang", "GioHang", new { @class = "" }))
                {
                    <br /> <input type="submit" value="Đặt hàng" class="btn btn-success" />
                }
            </td>
        </tr>
    </table>
</center> <br />

@*Css giỏ hàng*@
<style type="text/css">
    .divGioHang {
        border: 2px solid #EEEEEE;
        margin-left: 0%;
        font-size: large
    }

        .divGioHang td {
            padding: 40px;
            border: 2px solid #EEEEEE;
            text-align: center
        }

        .divGioHang th {
            text-align: center
        }
</style>