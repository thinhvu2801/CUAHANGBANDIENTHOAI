@model IEnumerable<CHBHDT63131330.Models.DonHang>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml"; }

<center>
    <h2>Danh sách đơn hàng</h2>


    <table class="table">
        <tr>
            <th>
                Họ tên
            </th>
            <th>
                Ngày đặt
            </th>
            <th>
                Tình trạng đơn hàng
            </th>
            <th>
                Thanh toán
            </th>
            <th>
                Tổng tiền
            </th>
            <th>
                Địa chỉ nhận hàng
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDat)
                </td>
                <td>
                    @{ if (@item.TinhTrang == 0)
                        {
                            <h5 style="color:red">Đang chờ xác nhận. </h5>
                        }
                        else if (@item.TinhTrang == 1)
                        {
                            <h5 style="color:green">Đã xác nhận </h5>
                        }
                        else
                        {
                            <h5 style="color:orangered">Đang chờ xác nhận </h5>
                        }
                    }
                </td>
                <td>
                    @{ if (@item.ThanhToan == 1)
                        {
                            <div style="color:red">Thanh toán tiền mặt</div>
                        }
                        else if (@item.ThanhToan == 2)
                        {
                            <div style="color:brown">Thanh toán chuyển khoản</div> }
                    }
                </td>
                <td>
                    @String.Format("{0:0,0}", item.TongTien) VNĐ
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChiNhanHang)
                </td>
                <td>
                    <button class="btn btn-info">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDon }, new { @style = "color:white;" })
                    </button>

                </td>
            </tr>
        }

    </table>
</center>